<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadThumbnailFragment"
    android:background="@color/black_lk">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Movie Thumbnail"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity=""
                />

            <ImageView
                android:id="@+id/btnBrowse"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_image_search_24"
                app:tint="@color/white"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="No File Selected"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/txtFileSelected">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Sorting Tags"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/blue_primary"/>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/radioNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="No Tags"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:buttonTint="@color/blue_primary">
                </RadioButton>
                <RadioButton
                    android:id="@+id/radioLatest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latest Movie"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:buttonTint="@color/blue_primary">
                </RadioButton>
                <RadioButton
                    android:id="@+id/radioPopular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Popular Movie"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:buttonTint="@color/blue_primary">
                </RadioButton>
                <RadioButton
                    android:id="@+id/radioSlider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slide Movie"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:buttonTint="@color/blue_primary">
                </RadioButton>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Thumbnail Preview: "
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/blue_primary"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:id="@+id/imageView">
            </ImageView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnUpload"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Upload"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="@color/white"
                    android:background="@drawable/gradient_color_blue_main"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>